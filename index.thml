            // æ™‚é–“åŠ¹æœ
            triggerTimeEffect();
            
            // å±¥æ­´ã«è¿½åŠ ï¼ˆæˆ»ã‚‹ãƒœã‚¿ãƒ³ã§æˆ»ã‚Œã‚‹ã‚ˆã†ã«ï¼‰
            history.pushState({ room: roomId }, '', `#${roomId}`);
            
